#include <stdio.h>
#include <string.h>

int ft_strlcat(char *dest, char *src, int size)
{
	int	a;
	int	b;

	a = 0;
	b = 0;
	while (dest[a])
	{
		a++;
	}
	while (src[b] && a < size)
	{
		dest[a] = src[b];
		b++;
	}
	return (a);
}
int main() 
{
    dest[] = "Hello";
    src[] = "World!";
    
    printf("%s\n", ft_strlcat(dest, src, 7));

    return 0;
}

